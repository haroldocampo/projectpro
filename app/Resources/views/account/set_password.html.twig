{% extends '@FOSUser/fos_base.html.twig' %}

{% block content %}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="wrapper">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                </div>
            </div>
            <div class="row m-t-20">
                <div class="col-xs-12 col-lg-6 col-lg-offset-3">
                    <div class="card-box">

                        <h2 class="m-t-0 m-b-20">Setup Account</h2>
                        <form method="post" action="{{ path('accountSetPasswordCheck') }}">
                            {% if error %}
                                <div class="alert alert-danger" role="alert">
                                    <strong>{{ error }}</strong>
                                </div>
                            {% endif %}
                            <fieldset class="form-group">
                                <label for="">Email Address</label>
                                <input type="text" name="firstName" class="form-control" value="{{ user.email }}" readonly>
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="">First Name</label>
                                <input type="text" name="firstName" class="form-control" value="{{ user.firstName }}">
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="">Last Name</label>
                                <input type="text" name="lastName" class="form-control" value="{{ user.lastName }}">
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="">Password</label>
                                <input type="password" name="password" class="form-control">
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="">Confirm Password</label>
                                <input type="password" name="confirmPassword" class="form-control">
                            </fieldset>
                            <input type="hidden" name="token" value="{{ token }}">
                            <input type="hidden" name="userId" value="{{ userId }}">

                            <button type="submit" class="btn btn-primary">Submit Account Details</button>
                        </form>


                    </div>
                </div><!-- end col-->
            </div>

        </div> <!-- container -->



    </div> <!-- End wrapper -->

{% endblock %}